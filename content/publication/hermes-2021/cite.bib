 doi = {10.1063/5.0060146},
 journal = {The Journal of Chemical Physics},
 number = {9},
 pages = {094105},
 title = {Geometry Optimization Speedup through a Geodesic Approach to Internal Coordinates},
 volume = {155},
 year = {2021}
}

